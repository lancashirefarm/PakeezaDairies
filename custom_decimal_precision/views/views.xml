<odoo>

    <record id="custom_view_pos_pos_form" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="replace">
                <field name="price_unit" />
            </xpath>
        </field>
    </record>

    <record id="custom_view_pos_order_line_form" model="ir.ui.view">
        <field name="name">pos.order.line.form</field>
        <field name="model">pos.order.line</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price_unit']" position="replace">
                <field name="price_unit" />
            </xpath>
        </field>
    </record>

</odoo>