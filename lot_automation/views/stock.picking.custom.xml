<odoo>
    <data>
        <record id="view_picking_form_extend" model="ir.ui.view">
            <field name="name">Stock Picking Extend</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header/button[@name='button_validate']" position="replace">
                    <button name="cutom_button_validate"
                            attrs="{'invisible': ['|', ('state', 'in', ('waiting','confirmed')), ('show_validate', '=', False)]}"
                            string="Validate" type="object" class="oe_highlight"
                            groups="stock.group_stock_user"/>
            </field>
        </record>
        <record id="view_picking_form_extend_1" model="ir.ui.view">
            <field name="name">Stock Picking Extend</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header/button[@name='button_validate']" position="replace">
                    <button name="cutom_button_validate"
                            attrs="{'invisible': ['|', ('state', 'not in', ('waiting', 'confirmed')), ('show_validate', '=', False)]}"
                            string="Validate" type="object" groups="stock.group_stock_user" class="o_btn_validate"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
